<div class='row'>
  {{#each notes}}
  <div class='col-md-4'>
    <div class='card'>
      <div class='card-body'>
        <h4 class='card-title d-flex justify-content-between align-item-center'>
          {{title}} <a href='/notes/edit/{{_id}}'><i class='fa fa-edit'></i></a>
        </h4>
        <p>{{description}}</p>
      </div>
      <form action='/notes/delete/{{_id}}?_method=delete' method='post'>
        <input type='hidden' value='delete'>
        <button class='btn btn-danger btn-block btn-sm' type='submit'>Delete</button>
      </form>
    </div>
  </div>
  {{/each}}
</div>
