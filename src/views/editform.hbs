<div class='col-md-5 mx-auto'>
  <div class='card'>
    <div class='card-header d-flex justify-content-center'>
      Edit your note
    </div>
    <div class='card-body'>
      <form action='/notes/edit/{{note._id}}?_method=put' method='POST' class='w-100'>
        <input name='method' type='hidden' value='put'>
        <div class='form-group'>
          <input name='title' type='text' class='form-control' value={{note.title}}>
        </div>
        <div class='form-group'>
          <textarea name='description' class='form-control'>{{note.description}}</textarea>
        </div>
        <div class='form-group'>
          <button class='btn btn-primary btn-block' action='submit'>
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
